<%- include("header") -%>
<div class="box" id="heading">
    <h1><%=listTitle%></h1>

</div>

<div class="box">
    <ul>
        <% for(let i = 0; i < newListItems.length; i++){ %>
        <% if(newListItems[i] != "") { %>
        <div class="item">
            <input type="checkbox">
            <p><%=newListItems[i]%></p>
        </div>
        <% } %>
        <% } %>
    </ul>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Todo Item">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
</div>

<%- include("footer") -%>